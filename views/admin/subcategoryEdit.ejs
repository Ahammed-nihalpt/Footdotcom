<!DOCTYPE html>
<html lang="en">
    <%- include('../partials/adminPartials/AdminHeader.ejs') %> 
    <link rel="stylesheet" href="/css/adminAddproducts.css" type="text/css" />
    <section class="body-section">
        <h3 class="i-names">Edit Subcategory</h3>
        <div class="container d-flex justify-content-center">
          <div class=" center-div p-2">
            <form action="/admin/edit/subcategory/<%= subcategory._id %> " method="post">
              <div class="row p-2 mt-3 justify-content-center">
                <div class="col-md-8">
                  <label for="formFile" class="form-label">Subcategory:</label>
                  <input class="form-control" placeholder="subcategory Name" type="text" value="<%= subcategory.sub_category_name %>" id="subcategoryName" name="subcategoryName" required>
                </div>
                <div class="col-md-8 mt-3">
                    <label for="formFile" class="form-label">Category:</label>
                    <select class="form-select form-select-sm" aria-label=".form-select-sm example" name="category">
                        <% allCategory.forEach(data => { %>
                            <% let a = ''+ data.id %> 
                            <% let b = '' + subcategory.category_id %> 
                            <% if ( data.id+'' === ''+subcategory.category_id ) { %>
                                <option value="<%= data._id %>" selected> <%= data.category_name %> </option>
                            <% } else { %>
                                <option value="<%= data._id %>"> <%= data.category_name %> </option>
                            <% } %> 
                        <% }) %>
                      </select>
                  </div>
              <div class="row p-2 mt-3 mb-2">
                <div class="col-md-12 d-flex justify-content-center">
                  <button class="btn sub-btn btn-lg">Edit Category</button>
                </div>
              </div>
            </form>
          </div>
      </div>
    </section>
<script>
    $("#menu-btn").click(function () {
      $("#menu").toggleClass("active");
    });
  </script>
  <style>
    #menu .items li:nth-child(3) {
      border-left: 4px solid #fff;
    }
  </style>
  <script
    src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js"

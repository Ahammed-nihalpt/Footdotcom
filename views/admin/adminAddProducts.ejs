<!DOCTYPE html>
<html lang="en">
    <%- include('../partials/adminPartials/AdminHeader.ejs') %>
    <link rel="stylesheet" href="/css/adminAddproducts.css" type="text/css" />
    <section class="body-section">
        <h3 class="i-names">Add Products</h3>
        <div class="container d-flex justify-content-center">
          <div class=" center-div p-2">
            <form action="" method="post" enctype="multipart/form-data" id="add_product_table">
              <div class="row p-2 mt-3">
                <div class="col-md-6">
                  <label for="formFile" class="form-label">Product Image:</label>
                  <input class="form-control" type="file" id="prodcutImage" name="prodcutImage">
                  <div id="imageerror" class="error-message"></div>
                </div>
                <div class="col-md-6">
                  <label for="formFile" class="form-label">Product Name:</label>
                  <input class="form-control" placeholder="Product Name" type="text" id="productName" name="prodcutName">
                  <div id="nameerror" class="error-message"></div>
                </div>
              </div>
              <div class="row p-2">
                <div class="col-md-6">
                  <label for="formFile" class="form-label">Product Price:</label>
                  <input class="form-control" placeholder="Product Price (in Rs.)" type="text" id="price" name="price">
                  <div id="priceerror" class="error-message"></div>
                </div>
                <div class="col-md-6">
                  <label for="formFile" class="form-label">Stock:</label>
                  <input class="form-control" placeholder="Stock" type="text" id="stock" name="stock">
                  <div id="stockerror" class="error-message"></div>
                </div>
              </div>
              <div class="row p-2">
                <div class="col-md-6">
                  <label for="formFile" class="form-label">Product color:</label>
                  <input class="form-control" placeholder="Product Color" type="text" id="color" name="color">
                  <div id="colorerror" class="error-message"></div>
                </div>
                <div class="col-md-6">
                  <label for="formFile" class="form-label">Size:</label>
                  <input class="form-control" type="text" placeholder="Size" id="size" name="size">
                  <div id="sizeerror" class="error-message"></div>
                </div>
              </div>
              <div class="row p-2">
                <div class="col-md-12">
                  <hr>
                </div>
              </div>
              <div class="row p-1">
                <div class="col-md-12">
                  <h5>Other Details:</h5>
                </div>
              </div>
              <div class="row p-2">
                <div class="col-md-8 offset-md-2">
                  <label for="formFile" class="form-label">Brand:</label>
                  <input class="form-control" placeholder="Brand Name" type="text" id="brand" name="brand">
                  <div id="branderror" class="error-message"></div>
              </div>
              </div>
              <div class="row p-2">
                <div class="col-md-12">
                  <hr>
                </div>
              </div>
              <div class="row p-1">
                <div class="col-md-12">
                  <h5>Category:</h5>
                </div>
              </div>
              <div class="row p-2">
                <% main.forEach(element => { %>
                  <div class="col-md-4">
                    <label for="formFile" class="form-label"><%= element.category_name %>:</label>
                    <select class="form-select form-select-sm" aria-label=".form-select-sm example" name="<%= element.category_name %>">
                      <% sub.forEach(data => { %>
                        <% if (data.category_id+'' == ''+element._id) { %>
                          <option value="<%= data._id %>"><%= data.sub_category_name %></option>
                        <% } %>
                      <% }) %>
                    </select>
                  </div>
                <% }) %>
              </div>
              <div class="row p-2 mt-5 mb-2">
                <div class="col-md-12 d-flex justify-content-center">
                  <button class="btn sub-btn btn-lg">Add Product</button>
                </div>
              </div>
            </form>
          </div>
      </div>
    </section>
    <script src="/javascript/productAdd.js"></script>
<script>
    $("#menu-btn").click(function () {
      $("#menu").toggleClass("active");
    });
  </script>
  <style>
    #menu .items li:nth-child(2) {
      border-left: 4px solid #fff;
    }
    .error{
      border-color: rgb(249, 0, 0);
    }
    .success{
      border-color: rgb(66, 249, 0);
    }
    .error-message{
      height: 18px;
    color: #f20a0a;
    font-size: 9px;
    margin-top: 0px;
    margin-left: 10px;
    }
  </style>
  <script
    src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3"
    crossorigin="anonymous"
  ></script>
</body>
</html>
</body>
</html>


<!DOCTYPE html>
<html lang="en">
    <%- include('../partials/adminPartials/AdminHeader.ejs') %>
    <link rel="stylesheet" href="/css/adminAddproducts.css" type="text/css" />
    <section class="body-section">
      <% if(message != ''){ %>
        <div
          class="alert alert-danger alert-dismissible fade show al-mod w-100"
          role="alert"
          style="margin-top: 70px;"
        >
          <strong><%= message %> </strong>
          <button
            type="button"
            class="btn-close"
            data-bs-dismiss="alert"
            aria-label="Close"
          ></button>
        </div>
        <% } %>
        <h3 class="i-names">Add Coupon</h3>
        <div class="container d-flex justify-content-center">
          <div class=" center-div p-2">
            <form action="" method="post" id="coupon_form">
              <div class="row p-2 mt-3">
                <div class="col-md-12">
                  <label for="formFile" class="form-label">Coupon Code:</label>
                  <input class="form-control" placeholder="Coupon Code" type="text" id="productName" name="code" required>
                  <div id="nameerror" class="error-message"></div>
                </div>
              </div>
              <div class="row p-2">
                <div class="col-md-6">
                  <label for="formFile" class="form-label">Offer:</label>
                  <input class="form-control" placeholder="Offer (in %)" type="text" id="price" name="offer" required>
                  <div id="priceerror" class="error-message"></div>
                </div>
                <div class="col-md-6">
                  <label for="formFile" class="form-label">Maximum Amount:</label>
                  <input class="form-control" placeholder="Maximum Amount" type="text" id="stock" name="amount" required>
                  <div id="stockerror" class="error-message"></div>
                </div>
              </div>
              <div class="row p-2 mt-2 mb-2">
                <div class="col-md-12 d-flex justify-content-center">
                  <button class="btn sub-btn btn-lg">Add Coupon</button>
                </div>
              </div>
            </form>
          </div>
      </div>
    </section>
    <!-- <script src="/javascript/productAdd.js"></script> -->
<script>
    $("#menu-btn").click(function () {
      $("#menu").toggleClass("active");
    });
  </script>
  <style>
    #menu .items li:nth-child(8) {
      border-left: 4px solid #fff;
    }
    .error{
      border-color: rgb(249, 0, 0);
    }
    .success{
      border-color: rgb(66, 249, 0);
    }
    .error-message{
      height: 18px;
    color: #f20a0a;
    font-size: 9px;
    margin-top: 0px;
    margin-left: 10px;
    }
  </style>
  <script
    src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3"
    crossorigin="anonymous"
  ></script>
</body>
</html>
</body>
</html>


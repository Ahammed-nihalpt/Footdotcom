<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <!-- bootstrap css -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi"
      crossorigin="anonymous"
    />
    <link
      href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined"
      rel="stylesheet"
    />
    <script src="https://code.jquery.com/jquery-3.6.1.min.js"></script>
    <link rel="stylesheet" href="/css/Landignpage.css" />
    <link rel="stylesheet" href="/css/Homepage.css" />
    <title>Home</title>
  </head>
  <body>
    <div class="dropback"></div>
    <aside>
      <div>
        <button type="button" class="close">&times;</button>
        <h4>Filter</h4>
        <div class="gender-div mt-3">
          <h5>Gender:</h5>
          <p><input type="checkbox" name="gender" value="men" /> Men</p>
          <p><input type="checkbox" name="gender" value="men" /> Women</p>
          <p><input type="checkbox" name="gender" value="men" /> Kids</p>
        </div>
        <div class="size-div mt-3">
          <h5>Size:</h5>
          <div class="p-2">
            <label class="lab-size">
              <input type="checkbox" name="" id="" />
              <span>41</span>
            </label>
          </div>
        </div>
        <div class="brand-div mt-3">
          <h5>Brand:</h5>
          <p><input type="checkbox" name="gender" value="men" /> brand</p>
          <p><input type="checkbox" name="gender" value="men" /> brand</p>
        </div>
        <div class="price-div mt-3">
          <h5>Price:</h5>
          <p><input type="checkbox" name="gender" value="men" /> 0 to 1000</p>
        </div>
        <div class="type-div mt-3">
          <h5>Type:</h5>
          <p><input type="checkbox" name="gender" value="men" /> asdasd</p>
        </div>
        <div class="color-div mt-3">
          <h5>Color:</h5>
          <p><input type="checkbox" name="gender" value="men" />cccccc</p>
        </div>
        <div class="brand-div mt-3">
          <h5>Occasion :</h5>
          <p><input type="checkbox" name="gender" value="men" /> ooooo</p>
        </div>
        <div class="d-flex p-3">
          <a href="" class="btn bottom-btn me-1">Apply</a>
          <button class="btn bottom-btn" id="canBtn">Cancel</button>
        </div>
      </div>
    </aside>
    <%- include('../partials/userPartials/homeHeader.ejs') %>
    <section class="main-sec">
      <div class="d-flex justify-content-between p-3 border-bottom main-sec">
        <div class="col-md-6">
          <button id="filterBtn">Filter</button>
        </div>
        <div class="col-md-3">
          <div class="d-flex">
            <input type="text" class="form-control" />
            <button>search</button>
          </div>
        </div>
      </div>
      <div
        class="row gap-5 justify-content-center p-5 align-items-stretch main-sec me-0"
      >
        <% allData.forEach(data =>{ %>
            <a class="card col-md-3 col-sm-4 nonlink" href="/user/home/<%= data._id %>" style="width: 18rem">
              <img
                src="/images/<%= data.product_img %> "
                class="card-img-top"
                alt="..."
              />
              <div class="card-body">
                <p class="card-text"><h6><%= data.product_name %></h6><br>Rs.<%= data.price %> </p>
              </div>
            </a>
        <%})%>
      </div>
    </section>
    <!-- bootstrap javascript -->
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3"
      crossorigin="anonymous"
    ></script>
    <script src="/javascript/HomepageFilter.js"></script>
  </body>
</html>

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <!-- bootstrap css -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi"
      crossorigin="anonymous"
    />
    <!-- google font -->
    <link
      href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="/css/Signup.css" type="text/css" />
    <title>Change Password</title>
  </head>
  <body>
    <% if(message != ''){ %>
    <div
      class="alert alert-danger alert-dismissible fade show position-absolute top-0"
      role="alert"
    >
      <strong><%= message %> </strong>
      <button
        type="button"
        class="btn-close"
        data-bs-dismiss="alert"
        aria-label="Close"
      ></button>
    </div>
    <% } %>
    <div class="body-div maincolor d-flex flex-column justify-content-center">
      <div class="mid-div">
        <div class="signup-div d-flex flex-column align-items-center">
          <h4 class="order-1">Change Password</h4>
        </div>
        <form action="" method="post" id="sign_form" name="sign_form">
          <div class="row">
            <div class="col-md-12 input-control">
              <input
                type="password"
                class="form-control"
                id="currpassword"
                placeholder="Current Password"
                aria-label="password"
                name="currentPassword"
              />
              <div id="cpassworderror" class="error-message"></div>
            </div>
            <div class="col-md-6 input-control">
              <input
                type="password"
                class="form-control"
                id="password"
                placeholder="New Password"
                aria-label="password"
                name="password"
              />
              <div id="passworderror" class="error-message"></div>
            </div>
            <div class="col-md-6 input-control">
              <input
                type="password"
                class="form-control"
                id="conPassword"
                placeholder="Confirm Password"
                aria-label="conPassword"
                name="conPassword"
              />
              <div id="conpassworderror" class="error-message"></div>
            </div>
            <div class="col-12 input-control">
              <div class="form-check">
                <input
                  class="form-check-input"
                  type="checkbox"
                  onclick="myFunction()"
                  id="gridCheck"
                />
                <label class="form-check-label" for="gridCheck">
                  Show password
                </label>
              </div>
            </div>
            <div class="d-flex justify-content-center">
              <button type="submit" class="submit-btn">Submit</button>
              <a href="/user/profile" class="btn ms-1 submit-btn">Cancel</a>
            </div>
          </div>
        </form>
      </div>
    </div>

    <!-- bootstrap javascript -->
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3"
      crossorigin="anonymous"
    ></script>
    <!-- validation javascript -->
    <script src="/javascript/changePassword.js"></script>
  </body>
</html>
